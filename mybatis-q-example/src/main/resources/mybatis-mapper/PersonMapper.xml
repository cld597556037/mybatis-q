<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.mybatisq.mapper.PersonMapper">
    <select id="count" parameterType="com.github.mybatisq.Query" resultType="java.lang.Integer">
        select count(0) <include refid="com.github.mybatisq.mapper.QMapper.countFrom"/>
    </select>

    <select id="select" parameterType="com.github.mybatisq.Query" resultType="com.github.mybatisq.entity.Person">
        select ${tableAlias}.pid,${tableAlias}.personName,${tableAlias}.createDate <include refid="com.github.mybatisq.mapper.QMapper.selectFrom"/>
    </select>

    <insert id="insert" parameterType="com.github.mybatisq.entity.Person" useGeneratedKeys="true" keyProperty="pid">
        <trim prefix="insert person (" suffix=")" suffixOverrides=",">
            <if test="pid != null">pid,</if>
            <if test="personName != null">personName,</if>
            <if test="createDate != null">createDate,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="pid != null">#{pid},</if>
            <if test="personName != null">#{personName},</if>
            <if test="createDate != null">#{createDate},</if>
        </trim>
    </insert>

    <update id="update" parameterType="com.github.mybatisq.entity.Person">
        <trim prefix="update person set" suffix="where pid=#{pid}" suffixOverrides=",">
            <if test="pid != null">pid=#{pid},</if>
            <if test="personName != null">personName=#{personName},</if>
            <if test="createDate != null">createDate=#{createDate},</if>
        </trim>
    </update>

    <delete id="delete">
        delete from person where pid=#{pid}
    </delete>
</mapper>