            <if test="empId != null">#{empId},</if>
            <if test="postId != null">#{postId},</if>
        </trim>
    </insert>

    <update id="update" parameterType="com.github.mybatisq.entity.EmpPost">
        <trim prefix="update empPost set" suffix="where epid=#{epid}" suffixOverrides=",">
            <if test="empId != null">empId=#{empId},</if>
            <if test="postId != null">postId=#{postId},</if>
        </trim>
    </update>

    <delete id="delete">
        delete from empPost where epid=#{epid}
    </delete>
</mapper>