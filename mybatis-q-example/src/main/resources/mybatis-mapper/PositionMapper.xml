<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.github.mybatisq.mapper.PositionMapper">
    <select id="count" parameterType="com.github.mybatisq.Query" resultType="java.lang.Integer">
        select count(0) <include refid="com.github.mybatisq.mapper.QMapper.countFrom"/>
    </select>

    <select id="select" parameterType="com.github.mybatisq.Query" resultType="com.github.mybatisq.entity.Position">
        select ${tableAlias}.postId,${tableAlias}.postNo,${tableAlias}.postName <include refid="com.github.mybatisq.mapper.QMapper.selectFrom"/>
    </select>

    <insert id="insert" parameterType="com.github.mybatisq.entity.Position" useGeneratedKeys="true" keyProperty="postId">
        <trim prefix="insert position (" suffix=")" suffixOverrides=",">
            <if test="postId != null">postId,</if>
            <if test="postNo != null">postNo,</if>
            <if test="postName != null">postName,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="postId != null">#{postId},</if>
            <if test="postNo != null">#{postNo},</if>
            <if test="postName != null">#{postName},</if>
        </trim>
    </insert>

    <update id="update" parameterType="com.github.mybatisq.entity.Position">
        <trim prefix="update position set" suffix="where postId=#{postId}" suffixOverrides=",">
            <if test="postNo != null">postNo=#{postNo},</if>
            <if test="postName != null">postName=#{postName},</if>
        </trim>
    </update>

    <delete id="delete">
        delete from position where postId=#{postId}
    </delete>
</mapper>